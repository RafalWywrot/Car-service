@model CarService.WebApplication.Models.User.UserBasicViewModel
@{
    ViewBag.Title = Resource.ManageAccount;
}

<p class="text-success">@ViewBag.StatusMessage</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="body-with-table row">
    <div class="col-md-12 background-container w-100">
        <div class="form-horizontal">
            <div class="header-text" style="width: 50%; display:inline-block;">
                @Resource.ManageAccount
            </div>

            <div style="width: 20%; display:inline-block; float:right; padding-top: 5px;">
                @Html.ActionLink(Resource.ChangePassword, "ChangePassword", null, new { @class = "btn btn-default" })
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.Id)

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12 default-text" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-12 default-text control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Surname, new { @class = "col-md-12 default-text control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-12 default-text control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
            </div>
            <div class=" col-md-12">
                <div class="form-group">
                    <input type="submit" value="@Resource.ButtonSave" class="btn btn-success " />
                </div>
            </div>
        </div>
    </div>
</div>
}
    
