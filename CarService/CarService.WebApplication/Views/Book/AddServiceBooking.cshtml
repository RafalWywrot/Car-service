@model CarService.WebApplication.Models.ServiceBooking.ServiceBookingFormViewModel

@{
    ViewBag.Title = "AddServiceBooking";
}
<div class="row body-with-table" style="margin-bottom: 20px;">
    <div class="col-md-12 w-100">

        <div style="padding-bottom: 15px;">
            @Html.ActionLink(Resource.ButtonBack, "Index", new { @area = "" }, new { @class = "btn btn-default w-auto" })
        </div>
        <div class="header-text">
            Nowa usługa
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CarId, htmlAttributes: new { @class = "control-label col-md-12 default-text" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.CarId, Model.Cars, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CarId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ServiceId, htmlAttributes: new { @class = "control-label col-md-12 default-text" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.ServiceId, Model.Services, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ServiceId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                @Html.Partial("_Date")

                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-12 default-text" })
                    <div class="col-md-11">
                        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="@Resource.ButtonSave" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }


    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/_selectServiceDate.js"></script>
}
